			llamar nueva_linea
			
			'R': escriba "vamos a restar"
			llamar nueva_linea
			
			escriba "ingrese primer numero"
			llamar nueva_linea
			
			lea a
			llamar nueva_linea
			
			escriba "ingrese segundo numero"
			llamar nueva_linea
			
			lea b
			llamar nueva_linea
			
			ca<-a-b
			llamar nueva_linea
			
			escriba "la resta es:", ca
			llamar nueva_linea
			
