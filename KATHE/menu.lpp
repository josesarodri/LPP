	llamar nueva_linea
	
	escriba "R para la resta"
	llamar nueva_linea
	
	escriba "caracter distinto a R o S para terminar"
	llamar nueva_linea
	
	lea c
	
		caso c
			'S': escriba "vamos a la suma"
			llamar nueva_linea
			
